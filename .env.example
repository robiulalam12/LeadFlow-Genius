# Environment variables for LeadFlow Genius
# Copy this file to `.env` and replace the placeholder values with your real credentials.

# MongoDB connection string (e.g. mongodb+srv://user:password@cluster.mongodb.net)
MONGO_URL=

# Name of the MongoDB database to use
DB_NAME=

# Secret used to sign JWT tokens – generate a long random string
JWT_SECRET=

# Comma‑separated list of allowed origins for CORS (e.g. https://your‑frontend.vercel.app)
CORS_ORIGINS=https://leadflowgenius.vercel.app

# API key for the Emergent or OpenAI LLM used to generate follow‑up emails
EMERGENT_LLM_KEY=

# API key for SendGrid when enabling real email sending
SENDGRID_API_KEY=

# The base URL of the backend API (used by the frontend)
REACT_APP_BACKEND_URL=

# The URL where the frontend is hosted (used by the backend for CORS)
FRONTEND_URL=
